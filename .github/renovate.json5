{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "matchPaths": ["go.mod"],
      "groupName": "all minor, patch, or digest dependencies on Go",
    },
    {
      "matchPackageNames": ["Dockerfile"],
      "groupName": "all dependencies on Dockerfile",
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["github-actions"],
      "groupName": "all dependencies on GitHub Actions",
    },
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "github-actions",
  ],
}
