{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "matchPaths": ["go.mod"],
      "groupName": "all minor and patch dependencies on Go",
    },
    {
      "matchPaths": ["Dockerfile", "*.dockerfile"],
      "groupName": "all dependencies on Dockerfile",
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "matchPaths": ["^.github/workflows/*"],
      "groupName": "all minor and patch dependencies on Go",
    },
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "github-actions",
  ],
}
